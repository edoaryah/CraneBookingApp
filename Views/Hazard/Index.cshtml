@{
  ViewData["Title"] = "Hazard Management";
  Layout = "_ContentNavbarLayout";
}

<!-- Hoverable Table rows -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Hazard Management</h5>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createHazardModal">
      <i class="bx bx-plus me-1"></i> New Hazard
    </button>
  </div>

  <!--Loading indicator-->
  <div id="loadingIndicator" class="text-center py-5">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <p class="mt-2">Loading hazards...</p>
  </div>

  <!--Hazards table-->
  <div class="table-responsive text-nowrap" id="hazardTableContainer" style="display: none;">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0" id="hazardTableBody">
        <!--Will be filled dynamically-->
      </tbody>
    </table>
  </div>

  <!-- No data message -->
  <div id="noDataMessage" class="text-center py-5" style="display: none;">
    <i class="bx bx-error-circle text-secondary mb-2" style="font-size: 3rem;"></i>
    <p class="mb-0">No hazards found</p>
  </div>

  <!-- Error message -->
  <div id="errorMessage" class="alert alert-danger mx-4 mb-4" style="display: none;">
    An error occurred while loading hazards. Please try again later.
  </div>
</div>
<!--/ Hoverable Table rows -->

<!-- Create Hazard Modal -->
<div class="modal fade" id="createHazardModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createHazardModalTitle">Create New Hazard</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="createHazardForm">
          <div class="mb-3">
            <label for="hazardName" class="form-label">Hazard Name</label>
            <input type="text" class="form-control" id="hazardName" name="name" required
              placeholder="Enter hazard name" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveHazardBtn">Save</button>
      </div>
    </div>
  </div>
</div>

<!-- Toast container for notifications, if not already present in layout -->
<div id="toast-container" class="position-fixed top-0 end-0 p-3" style="z-index: 1100;"></div>

<!--Edit Hazard Modal-->
<div class="modal fade" id="editHazardModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editHazardModalTitle">Edit Hazard</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editHazardForm">
          <input type="hidden" id="editHazardId" name="id" />
          <div class="mb-3">
            <label for="editHazardName" class="form-label">Hazard Name</label>
            <input type="text" class="form-control" id="editHazardName" name="name" required
              placeholder="Enter hazard name" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="updateHazardBtn">Update</button>
      </div>
    </div>
  </div>
</div>

<!--Delete Confirmation Modal-->
<div class="modal fade" id="deleteHazardModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteHazardModalTitle">Delete Hazard</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="deleteHazardId" />
        <p>Are you sure you want to delete this hazard?</p>
        <p class="text-danger mb-0">This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
      </div>
    </div>
  </div>
</div>

@section PageScripts {
  <script src="~/js/hazard-management/hazard-management.js"></script>
}
