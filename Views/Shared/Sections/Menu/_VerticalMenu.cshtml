@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

<style>
  /* Memperbaiki masalah shadow dan spacing */
  .menu-inner-shadow {
    top: 130px !important;
    /* Menambah jarak agar shadow tidak menutupi logo */
  }

  /* Container untuk logo */
  .app-brand.demo {
    height: 120px !important;
    margin-bottom: 10px !important;
    /* Menambah jarak antara logo dan menu */
    padding-bottom: 10px !important;
    @* position: relative !important; *@
    z-index: 1 !important;
    /* Pastikan logo selalu di atas shadow */
  }

  /* Styling untuk container logo */
  .app-brand-link {
    @* display: flex !important;
    justify-content: center !important;
    align-items: center !important; *@
    width: 90% !important;
    height: 100% !important;
    @* background-color: aqua !important; *@
    @* padding: 5px !important; *@
  }

  /* Pastikan SVG mengisi ruangnya dengan baik */
  .app-brand-logo.demo {
    width: 100% !important;
    height: auto !important;
    max-height: 100px !important;
    @* display: flex !important;
    justify-content: center !important;
    align-items: center !important; *@
  }

  .app-brand-logo.demo svg {
    width: 160px !important;
    height: auto !important;
    max-width: 100% !important;
  }
</style>

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div
