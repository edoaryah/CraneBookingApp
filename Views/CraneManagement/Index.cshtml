@{
  ViewData["Title"] = "Crane Management";
  Layout = "_ContentNavbarLayout";
}

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Crane Management</h5>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCraneModal">
      <i class="bx bx-plus me-1"></i> Add Crane
    </button>
  </div>
  <div class="card-body">
    <!-- Loading indicator -->
    <div id="loadingIndicator" class="text-center py-5">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <p class="mt-2">Loading cranes...</p>
    </div>

    <!-- Crane list table -->
    <div class="table-responsive" id="craneTableContainer" style="display: none;">
      <table class="table table-striped table-hover" id="craneTable">
        <thead>
          <tr>
            <th>Code</th>
            <th>Capacity (ton)</th>
            <th>Status</th>
            <th>Maintenance Info</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="craneTableBody">
          <!-- Will be filled dynamically -->
        </tbody>
      </table>
    </div>

    <!-- No data message -->
    <div id="noDataMessage" class="text-center py-5" style="display: none;">
      <i class="bx bx-cube text-secondary mb-2" style="font-size: 3rem;"></i>
      <p class="mb-0">No cranes found</p>
    </div>

    <!-- Error message -->
    <div id="errorMessage" class="alert alert-danger" style="display: none;">
      An error occurred while loading cranes. Please try again later.
    </div>
  </div>
</div>

<!-- Add Crane Modal -->
<div class="modal fade" id="addCraneModal" tabindex="-1" aria-labelledby="addCraneModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCraneModalLabel">Add New Crane</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addCraneForm">
          <div class="mb-3">
            <label for="addCraneCode" class="form-label">Crane Code</label>
            <input type="text" class="form-control" id="addCraneCode" required>
            <div class="invalid-feedback">Please enter a crane code.</div>
          </div>
          <div class="mb-3">
            <label for="addCraneCapacity" class="form-label">Capacity (ton)</label>
            <input type="number" class="form-control" id="addCraneCapacity" min="1" required>
            <div class="invalid-feedback">Please enter a valid capacity.</div>
          </div>
          <div class="mb-3">
            <label for="addCraneStatus" class="form-label">Status</label>
            <select class="form-select" id="addCraneStatus" required>
              <option value="0">Available</option>
              <option value="1">Maintenance</option>
            </select>
          </div>

          <!-- Maintenance fields (initially hidden) -->
          <div id="addMaintenanceFields" style="display: none;">
            <div class="alert alert-info">
              <i class="bx bx-info-circle me-1"></i>
              When setting a crane to Maintenance, you must provide maintenance details.
            </div>
            <div class="mb-3">
              <label for="addMaintenanceDays" class="form-label">Estimated Days</label>
              <input type="number" class="form-control" id="addMaintenanceDays" min="0" value="0">
            </div>
            <div class="mb-3">
              <label for="addMaintenanceHours" class="form-label">Estimated Hours</label>
              <input type="number" class="form-control" id="addMaintenanceHours" min="0" value="0">
            </div>
            <div class="mb-3">
              <label for="addMaintenanceReasons" class="form-label">Maintenance Reasons</label>
              <textarea class="form-control" id="addMaintenanceReasons" rows="3"></textarea>
              <div class="invalid-feedback">Please provide maintenance reasons.</div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveNewCraneBtn">Save</button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Crane Modal -->
<div class="modal fade" id="editCraneModal" tabindex="-1" aria-labelledby="editCraneModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editCraneModalLabel">Edit Crane</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editCraneForm">
          <input type="hidden" id="editCraneId">
          <div class="mb-3">
            <label for="editCraneCode" class="form-label">Crane Code</label>
            <input type="text" class="form-control" id="editCraneCode" required>
            <div class="invalid-feedback">Please enter a crane code.</div>
          </div>
          <div class="mb-3">
            <label for="editCraneCapacity" class="form-label">Capacity (ton)</label>
            <input type="number" class="form-control" id="editCraneCapacity" min="1" required>
            <div class="invalid-feedback">Please enter a valid capacity.</div>
          </div>
          <div class="mb-3">
            <label for="editCraneStatus" class="form-label">Status</label>
            <select class="form-select" id="editCraneStatus" required>
              <option value="0">Available</option>
              <option value="1">Maintenance</option>
            </select>
          </div>

          <!-- Maintenance fields (initially hidden) -->
          <div id="editMaintenanceFields" style="display: none;">
            <div class="alert alert-info">
              <i class="bx bx-info-circle me-1"></i>
              When setting a crane to Maintenance, you must provide maintenance details.
            </div>
            <div class="mb-3">
              <label for="editMaintenanceDays" class="form-label">Estimated Days</label>
              <input type="number" class="form-control" id="editMaintenanceDays" min="0" value="0">
            </div>
            <div class="mb-3">
              <label for="editMaintenanceHours" class="form-label">Estimated Hours</label>
              <input type="number" class="form-control" id="editMaintenanceHours" min="0" value="0">
            </div>
            <div class="mb-3">
              <label for="editMaintenanceReasons" class="form-label">Maintenance Reasons</label>
              <textarea class="form-control" id="editMaintenanceReasons" rows="3"></textarea>
              <div class="invalid-feedback">Please provide maintenance reasons.</div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="updateCraneBtn">Update</button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteCraneModal" tabindex="-1" aria-labelledby="deleteCraneModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteCraneModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the crane <strong id="deleteCraneCode"></strong>?</p>
        <p class="text-danger">This action cannot be undone. All related bookings will also be affected.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
      </div>
    </div>
  </div>
</div>

<!-- Maintenance Log Modal -->
<div class="modal fade" id="maintenanceLogModal" tabindex="-1" aria-labelledby="maintenanceLogModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="maintenanceLogModalLabel">Maintenance History</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h6 id="maintenanceLogCraneTitle"></h6>
        <div id="maintenanceLogLoading" class="text-center py-3">
          <div class="spinner-border spinner-border-sm text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <span class="ms-2">Loading maintenance logs...</span>
        </div>
        <div id="maintenanceLogContent">
          <table class="table table-bordered" id="maintenanceLogTable">
            <thead>
              <tr>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Duration</th>
                <th>Reasons</th>
              </tr>
            </thead>
            <tbody id="maintenanceLogTableBody">
              <!-- Will be filled dynamically -->
            </tbody>
          </table>
          <div id="noMaintenanceLogMessage" class="text-center py-3" style="display: none;">
            <p class="text-muted mb-0">No maintenance logs found for this crane.</p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Toast for notifications -->
<div class="toast-container position-fixed top-0 end-0 p-3">
  <div id="notificationToast" class="toast align-items-center text-white bg-success border-0" role="alert"
    aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        <!-- Toast message will be set dynamically -->
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
        aria-label="Close"></button>
    </div>
  </div>
</div>

@section PageStyles {
  <style>
    .status-badge {
      padding: 0.35em 0.65em;
      border-radius: 0.25rem;
      display: inline-block;
      text-align: center;
      white-space: nowrap;
      vertical-align: baseline;
    }

    .status-available {
      background-color: rgba(40, 199, 111, 0.1);
      color: #28c76f;
      border: 1px solid rgba(40, 199, 111, 0.2);
    }

    .status-maintenance {
      background-color: rgba(255, 159, 67, 0.1);
      color: #ff9f43;
      border: 1px solid rgba(255, 159, 67, 0.2);
    }

    /* Time remaining counter */
    .maintenance-timer {
      margin-top: 5px;
      font-size: 0.85rem;
    }

    /* Actions buttons */
    .action-buttons .btn {
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
    }

    .action-buttons .btn+.btn {
      margin-left: 0.25rem;
    }
  </style>
}

@section PageScripts {
  <script src="~/js/crane-management/crane-management.js"></script>
}
