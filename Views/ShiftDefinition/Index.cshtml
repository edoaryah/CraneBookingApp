@{
  ViewData["Title"] = "Shift Definitions";
  Layout = "_ContentNavbarLayout";
}

<!-- Hoverable Table rows -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Shift Management</h5>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createShiftModal">
      <i class="bx bx-plus me-1"></i> New Shift
    </button>
  </div>

  <!-- Loading indicator -->
  <div id="loadingIndicator" class="text-center py-5">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <p class="mt-2">Loading shift definitions...</p>
  </div>

  <!-- Shift definitions table -->
  <div class="table-responsive text-nowrap" id="shiftTableContainer" style="display: none;">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Category</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0" id="shiftTableBody">
        <!-- Will be filled dynamically -->
      </tbody>
    </table>
  </div>

  <!-- No data message -->
  <div id="noDataMessage" class="text-center py-5" style="display: none;">
    <i class="bx bx-time text-secondary mb-2" style="font-size: 3rem;"></i>
    <p class="mb-0">No shift definitions found</p>
  </div>

  <!-- Error message -->
  <div id="errorMessage" class="alert alert-danger mx-4 mb-4" style="display: none;">
    An error occurred while loading shift definitions. Please try again later.
  </div>
</div>
<!--/ Hoverable Table rows -->

<!-- Create Shift Modal -->
<div class="modal fade" id="createShiftModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createShiftModalTitle">Create New Shift</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="createShiftForm">
          <div class="mb-3">
            <label for="shiftName" class="form-label">Shift Name</label>
            <input type="text" class="form-control" id="shiftName" name="name" required
              placeholder="Enter shift name" />
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="startTime" class="form-label">Start Time</label>
              <input type="time" class="form-control" id="startTime" name="startTime" required />
            </div>
            <div class="col-md-6">
              <label for="endTime" class="form-label">End Time</label>
              <input type="time" class="form-control" id="endTime" name="endTime" required />
            </div>
          </div>
          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" id="category" name="category" required>
              <option value="">Select Category</option>
              <option value="Day Shift">Day Shift</option>
              <option value="Night Shift">Night Shift</option>
            </select>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked />
            <label class="form-check-label" for="isActive">Active</label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveShiftBtn">Save</button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Shift Modal -->
<div class="modal fade" id="editShiftModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editShiftModalTitle">Edit Shift</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editShiftForm">
          <input type="hidden" id="editShiftId" name="id" />
          <div class="mb-3">
            <label for="editShiftName" class="form-label">Shift Name</label>
            <input type="text" class="form-control" id="editShiftName" name="name" required
              placeholder="Enter shift name" />
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="editStartTime" class="form-label">Start Time</label>
              <input type="time" class="form-control" id="editStartTime" name="startTime" required />
            </div>
            <div class="col-md-6">
              <label for="editEndTime" class="form-label">End Time</label>
              <input type="time" class="form-control" id="editEndTime" name="endTime" required />
            </div>
          </div>
          <div class="mb-3">
            <label for="editCategory" class="form-label">Category</label>
            <select class="form-select" id="editCategory" name="category" required>
              <option value="">Select Category</option>
              <option value="Day Shift">Day Shift</option>
              <option value="Night Shift">Night Shift</option>
            </select>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="editIsActive" name="isActive" />
            <label class="form-check-label" for="editIsActive">Active</label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="updateShiftBtn">Update</button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteShiftModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteShiftModalTitle">Delete Shift</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="deleteShiftId" />
        <p>Are you sure you want to delete this shift definition?</p>
        <p class="text-danger mb-0">This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
      </div>
    </div>
  </div>
</div>

@section PageScripts {
  <script src="~/js/shift-management/shift-management.js"></script>
}
