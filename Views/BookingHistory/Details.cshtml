@{
  ViewData["Title"] = "Booking Details";
  Layout = "_ContentNavbarLayout";
}

<div class="row">
  <div class="col-12">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0">Booking Details</h5>
          <span id="bookingNumber" class="text-muted"></span>
        </div>
        <div>
          <a href="/BookingHistory" class="btn btn-outline-secondary">
            <i class="bx bx-arrow-back me-1"></i> Back to History
          </a>
        </div>
      </div>

      <div class="card-body">
        <!-- Loading indicator -->
        <div id="loadingIndicator" class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2">Loading booking details...</p>
        </div>

        <!-- Error message -->
        <div id="errorMessage" class="alert alert-danger" style="display: none;">
          Failed to load booking details. Please try again or go back to history.
        </div>

        <!-- Booking details form -->
        <form id="bookingDetailsForm" style="display: none;">
          <!-- Requestor Information Section -->
          <div class="form-section">
            <h6 class="form-section-title">Requestor Information</h6>
            <div class="row mb-3">
              <div class="col-md-6 mb-3">
                <label class="form-label">Requestor Name</label>
                <input id="name" name="name" class="form-control" readonly />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Department Name</label>
                <input id="department" name="department" class="form-control" readonly />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6 mb-3">
                <label class="form-label">Supervisor Name</label>
                <input id="projectSupervisor" name="projectSupervisor" class="form-control" readonly />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Phone Number</label>
                <input id="phoneNumber" name="phoneNumber" class="form-control" readonly />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6 mb-3">
                <label class="form-label">Cost Code</label>
                <input id="costCode" name="costCode" class="form-control" readonly />
              </div>
            </div>
          </div>

          <!-- Booking Details Section -->
          <div class="form-section">
            <h6 class="form-section-title">Booking Details</h6>
            <div class="row mb-3">
              <div class="col-md-6 mb-3">
                <label class="form-label">Start Date</label>
                <input type="date" id="startDate" name="startDate" class="form-control" readonly />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">End Date</label>
                <input type="date" id="endDate" name="endDate" class="form-control" readonly />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label">Crane</label>
                <input id="crane" name="crane" class="form-control" readonly />
              </div>
              <div class="col-md-6">
                <label class="form-label">Location</label>
                <input id="location" name="location" class="form-control" readonly />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-12">
                <label class="form-label">Shift Schedule</label>
                <div id="shiftTableContainer">
                  <!-- Shift table will be generated here -->
                </div>
              </div>
            </div>
          </div>

          <!-- Job Details Section -->
          <div class="form-section">
            <h6 class="form-section-title">Job Details</h6>
            <div class="row mb-3">
              <div class="col-12 mb-3">
                <label class="form-label">Job Description</label>
                <textarea id="description" name="description" class="form-control" rows="3" readonly></textarea>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-12">
                <label class="form-label">Items to be Lifted</label>
                <div class="table-responsive">
                  <table class="table table-bordered" id="liftedItemsTable">
                    <thead>
                      <tr>
                        <th>Item Name</th>
                        <th>Height (m)</th>
                        <th>Weight (ton)</th>
                        <th>Quantity</th>
                      </tr>
                    </thead>
                    <tbody id="liftedItemsBody">
                      <!-- The rows will be added by JavaScript -->
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-12">
                <label class="form-label">Potential Hazards</label>
                <div id="hazardsContainer" class="mt-2">
                  <!-- Hazards will be loaded dynamically -->
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section PageStyles {
  <style>
    .form-section {
      margin-bottom: 2rem;
    }

    .form-section-title {
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid #ddd;
    }

    .form-control[readonly] {
      background-color: #f8f9fa;
      opacity: 1;
    }

    .shift-table {
      width: 100%;
      border-collapse: collapse;
    }

    .shift-table th,
    .shift-table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }

    .shift-table th {
      background-color: #f2f2f2;
    }

    .shift-indicator {
      display: inline-block;
      width: 20px;
      height: 20px;
      line-height: 20px;
      text-align: center;
      border-radius: 50%;
      color: white;
      font-weight: bold;
      font-size: 14px;
    }

    .shift-indicator.checked {
      background-color: #696cff;
    }

    .shift-indicator.unchecked {
      background-color: #d9d9d9;
    }

    .hazard-badge {
      display: inline-block;
      margin-right: 8px;
      margin-bottom: 8px;
      background-color: #f0f0f0;
      border-radius: 16px;
      padding: 5px 12px;
    }
  </style>
}

@section PageScripts {
  <script src="~/js/booking-history/booking-details.js"></script>
  <script>
    // Get booking ID from ViewData
    const bookingId = @ViewData["BookingId"];

    // Initialize page
    document.addEventListener('DOMContentLoaded', function () {
      if (bookingId) {
        loadBookingDetails(bookingId);
      } else {
        showError('Invalid booking ID');
      }
    });
  </script>
}
